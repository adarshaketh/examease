<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the RadioButton is checked -->
    <item android:state_checked="true" android:color="#FFFFFF" /> <!-- White color when checked -->

    <!-- Default state (unchecked) -->
    <item android:color="#000000" /> <!-- Black color when unchecked -->
</selector>
